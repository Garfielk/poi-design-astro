---
import MainLayout from '@/layouts/main.astro';
import EventNav from '@/components/EventNav.tsx';
import {Calendar, MapPin} from "lucide-react";

const { frontmatter } = Astro.props;
---

<MainLayout lang={frontmatter.lang}>
  <main class="min-h-screen pt-20">
    {/* Hero Section */}
    <div class="relative h-[400px] w-full overflow-hidden">
      <img
        src={frontmatter.cover}
        alt={frontmatter.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent" />

      <div class="absolute bottom-0 left-0 right-0 container mx-auto px-4 lg:px-8 pb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          {frontmatter.title}
        </h1>
        <div class="flex flex-col md:flex-row md:items-center gap-3 md:gap-6 text-white">
          <div class="flex items-center gap-2">
            <MapPin class="h-5 w-5" />
            <span class="text-lg">{frontmatter.location}</span>
          </div>
          <div class="flex items-center gap-2">
            <Calendar class="h-5 w-5" />
            <span class="text-lg font-semibold">{frontmatter.date}</span>
          </div>
        </div>
      </div>
    </div>

    {/* Breadcrumb Navigation */}
    <div class="border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div class="container mx-auto px-4 lg:px-8 py-4">
        <EventNav title={frontmatter.title} lang={frontmatter.lang} />
      </div>
    </div>

    {/* Content Section */}
    <div class="container mx-auto px-4 lg:px-8 py-12">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none
                prose-headings:text-foreground prose-headings:font-bold
                prose-h2:text-3xl prose-h2:mt-8 prose-h2:mb-4
                prose-h3:text-2xl prose-h3:mt-6 prose-h3:mb-3
                prose-p:text-muted-foreground prose-p:leading-relaxed prose-p:mb-4
                prose-ul:text-muted-foreground prose-ul:my-4
                prose-li:my-2
                prose-strong:text-foreground">
          <slot></slot>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
